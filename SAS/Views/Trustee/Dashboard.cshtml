@{
    ViewData["Title"] = "Trustee Dashboard";
    var profile = ViewBag.Profile as SAS.Models.User;
    var teachers = ViewBag.Teachers as List<SAS.Models.User>;
    var principals = ViewBag.Principals as List<SAS.Models.User>;
    var notices = ViewBag.Notices as IEnumerable<SAS.Models.Notice>;
}

<div class="container mt-4">
    <div class="card mb-4">
        <div class="card-body">
            <h3 class="text-primary">Welcome, @profile.Name <small class="text-muted">(Trustee)</small></h3>
            <p><strong>Email:</strong> @profile.Email</p>
        </div>
    </div>
    <!-- Notices Section -->
    <div class="mt-5">
        <div class="d-flex justify-content-between align-items-center">
            <h4>Notices</h4>
            <a class="btn btn-primary" asp-action="CreateNotice">Create Notice</a>
        </div>

        @if (notices != null && notices.Any())
        {
            <div class="row mt-3">
                @foreach (var n in notices)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-primary">@n.Subject</h5>
                                <p class="card-text">@n.Message</p>
                            </div>
                            <div class="card-footer d-flex justify-content-between align-items-center">
                                <small class="text-muted">@n.Date.ToString("yyyy-MM-dd")</small>
                                <div>
                                    <a asp-action="EditNotice" asp-route-id="@n.NoticeId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <form asp-action="DeleteNotice" asp-route-id="@n.NoticeId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Are you sure you want to delete this notice?');">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted mt-3">No notices found.</p>
        }
    </div>
    <div class="row">
        <div class="col-md-6">
            <h4>Teachers</h4>
            <ul class="list-group">
                @foreach (var t in teachers)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @t.Name - ₹@t.Salary
                    </li>
                }
            </ul>
        </div>

        <div class="col-md-6">
            <h4>Principals</h4>
            <ul class="list-group">
                @foreach (var p in principals)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @p.Name - ₹@p.Salary
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
